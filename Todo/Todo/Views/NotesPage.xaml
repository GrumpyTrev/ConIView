<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ConIView.Views.NotesPage"
             Title="{Binding Name}">
    <ContentPage.Content>
        <StackLayout>
            <ScrollView>
                <Label Text="{Binding Notes}"
                    VerticalOptions="StartAndExpand" 
                    HorizontalOptions="CenterAndExpand" Margin="10,0" TextType="Text" FontSize="Body" TextColor="#5C7DA2" />
            </ScrollView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>